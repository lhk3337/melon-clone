extends base
include mixins/playlist.pug
include mixins/player.pug
block content
    section
        div.container
            h2.subTitle Play lists
            +player
            button.pause Pause
            button.play Play
            div.listmusic
                ul.lists
                    if(playlists)
                        each item, index in playlists.playlists
                            +playlist(item, index)
block scripts
    script(src="/static/js/musicPlayer.js")
    script(src="/static/js/playList.js")